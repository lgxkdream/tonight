<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sys_config">
	<insert id="insert" parameterType="hashmap" keyProperty="string">
		insert
		into sys_config
		(
			ID
			,NAME
			,VALUE
			,VALUE_INT
		)
		values
		(
			#{ID}
			,#{NAME}
			,#{VALUE}
			,#{VALUE_INT}
			
		)
	</insert>

	<delete id="delete" parameterType="string">
		delete from sys_config
		where
		id = #{ID}
	</delete>

	<update id="update" parameterType="hashmap">
		update sys_config
		<set>
				<if test=" ID != null ">
					ID = #{ID},
				</if>
				<if test=" NAME != null ">
					NAME = #{NAME},
				</if>
				<if test=" VALUE != null ">
					VALUE = #{VALUE},
				</if>
				<if test=" VALUE_INT != null ">
					VALUE_INT = #{VALUE_INT},
				</if>
		</set>
		where ID = #{ID}
	</update>

	<select id="select_info" parameterType="hashmap" resultType="pd">
		select 
				ID
				,NAME
				,VALUE
				,VALUE_INT
		from sys_config 
		<where>
				<if test=" ID != null and ID !='' ">
					AND ID = #{ID}
				</if>
				<if test=" NAME != null and NAME !='' ">
					AND NAME = #{NAME}
				</if>
				<if test=" VALUE != null and VALUE !='' ">
					AND VALUE = #{VALUE}
				</if>
				<if test=" VALUE_INT != null and VALUE_INT !='' ">
					AND VALUE_INT = #{VALUE_INT}
				</if>
		</where>
		order by id 
	</select>

	<select id="select_count" parameterType="hashmap" resultType="int">
		select count(id) as c from sys_config
		<where>
				<if test=" ID != null and ID !='' ">
					AND ID = #{ID}
				</if>
				<if test=" NAME != null and NAME !='' ">
					AND NAME = #{NAME}
				</if>
				<if test=" VALUE != null and VALUE !='' ">
					AND VALUE = #{VALUE}
				</if>
				<if test=" VALUE_INT != null and VALUE_INT !='' ">
					AND VALUE_INT = #{VALUE_INT}
				</if>
		</where>
	</select>
	
</mapper>