<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dic_pay_type">
	<insert id="insert" parameterType="hashmap" keyProperty="string">
		insert
		into dic_pay_type
		(
			id
			,name
			,sort
		)
		values
		(
			#{id}
			,#{name}
			,#{sort}
		)
	</insert>

	<delete id="delete" parameterType="string">
		delete from dic_pay_type
		where
		id = #{id}
	</delete>

	<update id="update" parameterType="hashmap">
		update dic_pay_type
		<set>
				<if test=" id != null ">
					id = #{id},
				</if>
				<if test=" name != null ">
					name = #{name},
				</if>
				<if test=" sort != null ">
					sort = #{sort},
				</if>
		</set>
		where id = #{id}
	</update>

	<select id="select_info" parameterType="hashmap" resultType="hashmapEx">
		select 
				id
				,name
				,sort
		from dic_pay_type 
		<where>
				<if test=" id != null and id !='' ">
					and id = #{id}
				</if>
				<if test=" name != null and name !='' ">
					and name = #{name}
				</if>
				<if test=" sort != null and sort !='' ">
					and sort = #{sort}
				</if>
		</where>
		order by id 
	</select>

	<select id="select_count" parameterType="hashmap" resultType="int">
		select count(id) as c from dic_pay_type
		<where>
				<if test=" id != null and id !='' ">
					and id = #{id}
				</if>
				<if test=" name != null and name !='' ">
					and name = #{name}
				</if>
				<if test=" sort != null and sort !='' ">
					and sort = #{sort}
				</if>
		</where>
	</select>
	
</mapper>